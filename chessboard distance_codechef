#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
      int t;cin>>t;
      while(t>0){
          
          int x1,y1,x2,y2;cin>>x1>>y1>>x2>>y2;
          int dist=max(abs(x1-x2),abs(y1-y2));
          
          cout<<dist<<endl;
          
          
          
          t--;
      }
      
}
